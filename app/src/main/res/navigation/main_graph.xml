<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/fragment_home">
    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.myweatherapp.Home"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_second"
            app:destination="@id/second" />
    </fragment>
    <fragment
        android:id="@+id/second"
        android:name="com.example.myweatherapp.Places"
        android:label="activitySecond"
        tools:layout="@layout/activity_second" >
        <action
            android:id="@+id/action_fragment_places_to_detailsCity"
            app:destination="@id/detailsCity" />
    </fragment>
    <fragment
        android:id="@+id/detailsCity"
        android:name="com.example.myweatherapp.CityDetailFragment"
        android:label="city_details_fragment"
        tools:layout="@layout/city_details_fragment" />
</navigation>